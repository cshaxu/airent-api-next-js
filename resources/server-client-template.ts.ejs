function buildRequest(
  name: string,
  data: any,
): Request {
  const input = `${baseUrl}/${name}`;
  const init = {
    credentials: 'include' as RequestCredentials,
    method: 'POST',
    body: JSON.stringify(data),
    headers: headers(),
  };
  return new Request(input, init);
}
